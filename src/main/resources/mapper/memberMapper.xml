<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kcc.fillin.member.dao.MemberMapper">
	<resultMap type="MemberResponse" id="memberResultMap">
		<result column="postal_code" property="postalCode" />
	</resultMap>

	<!-- 이메일로 회원 조회 -->
	<select id="getMemberByEmail" resultMap="memberResultMap" parameterType="String">
		SELECT username, name, birth, status, postal_code, address
		FROM member
		WHERE username = #{username}
	</select>
	
	<!-- 회원 정보 수정, 파라미터 타입: MemberRequest(생성해야 함) -->
	<update id="updateMemberByEmail" parameterType="MemberRequest">
		UPDATE member SET
		password = #{password},
		postal_code = #{postalCode},
		address = #{address}
		WHERE username = #{username}
	</update>
	
	<select id="emailExists" parameterType="String" resultType="int">
		SELECT count(*)
		FROM MEMBER
		username = #{username}
	</select>
	
	<insert id="insertMember" parameterType="MemberDTO">
		INSERT INTO MEMBER
		(seq,username,name,phone,birth,address,postal_code,cc_seq,created_at,updated_at)
		VALUES
		(member_seq.nextval,#{username},#{password},#{phone},#{birth},#{address},#{postalCode},#{ccSeq},sysdate,sysdate) 	
		
	</insert>
	
		
</mapper>