<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kcc.fillin.member.mapper.MemberMapper">
	<resultMap type="com.kcc.fillin.member.dto.MemberResponse" id="memberResultMap">
		<result column="postal_code" property="postalCode" />
	</resultMap>

	<!-- 이메일로 회원 조회 -->
	<select id="getMemberByEmail" resultMap="memberResultMap" parameterType="String">
		SELECT email, name, birth, status, postal_code, address
		FROM member
		WHERE email = #{email}
	</select>
	
	<!-- 회원 정보 수정, 파라미터 타입: MemberRequest(생성해야 함) -->
	<update id="updateMemberByEmail" parameterType="com.kcc.fillin.member.dto.MemberRequest">
		UPDATE member SET
		password = #{password},
		postal_code = #{postal_code},
		address = #{address}
		WHERE email = #{email}
		
	</update>
</mapper>